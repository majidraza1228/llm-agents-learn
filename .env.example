# =============================================================================
# API Keys Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys
# Never commit the .env file to version control!

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Cohere API Configuration
COHERE_API_KEY=your_cohere_api_key_here

# XAI API Configuration
XAI_API_KEY=your_xai_api_key_here

# =============================================================================
# Service-Specific API Keys
# =============================================================================

# GitHub Token (for MCP Agent)
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_TOKEN=your_github_token_here

# Notion API Configuration (for MCP Agent)
# Create at: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Search API Keys
SERP_API_KEY=your_serpapi_key_here
TAVILY_API_KEY=your_tavily_key_here

# =============================================================================
# Vector Database Configuration
# =============================================================================

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX=your_pinecone_index_here

# Weaviate
WEAVIATE_URL=your_weaviate_url_here
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Qdrant
QDRANT_URL=your_qdrant_url_here
QDRANT_API_KEY=your_qdrant_api_key_here

# =============================================================================
# Local Model Configuration (Ollama)
# =============================================================================

OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application Settings
APP_NAME="LLM Agents Learn"
APP_VERSION=1.0.0

# =============================================================================
# Database Configuration (for persistent memory)
# =============================================================================

DATABASE_URL=sqlite:///./agent_memory.db
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname

# =============================================================================
# Optional: Third-Party Integrations
# =============================================================================

# Firecrawl (for web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Browser Use
PLAYWRIGHT_HEADLESS=true

# Email (for email agents)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
